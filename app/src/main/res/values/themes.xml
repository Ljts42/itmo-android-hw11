<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.dopochki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.dopochki.button" parent="Theme.dopochki">
        <item name="android:insetLeft">@dimen/button_inset</item>
        <item name="android:insetRight">@dimen/button_inset</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="Theme.dopochki.small_button" parent="Theme.dopochki">
        <item name="android:insetLeft">@dimen/button_inset_small</item>
        <item name="android:insetRight">@dimen/button_inset_small</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>